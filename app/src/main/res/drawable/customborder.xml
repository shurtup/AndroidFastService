<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8f8f8f"/>
            <corners android:radius="5dp" />
            <padding
                android:bottom="2dp" android:left="-1dp" android:top="-1dp" android:right="2dp"/>
        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_default_background"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>


